# Ship Engine Anomaly Detection API - Environment Configuration
# =============================================================
# Copy this file to .env and customize for your environment

# Application
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=text         # json, text

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1               # Set to CPU count for production

# API
API_PREFIX=/api/v1
DOCS_ENABLED=true       # Disable in production if desired

# Security (optional)
# API_KEY=your-secret-api-key-here
CORS_ORIGINS=*          # Comma-separated list for production

# Models
MODEL_DIR=models
DEFAULT_MODEL=ocsvm     # ocsvm, iforest, ensemble

# Inference
MAX_BATCH_SIZE=10000
STRICT_VALIDATION=false

# Monitoring
METRICS_ENABLED=true
